<%- include('partials/header') %>
<main class="main-content">
  <div class="quiz-card qr-quiz-card">
    <h1 class="quiz-title qr-quiz-title">Quiz Result</h1>

    <% if (correct) { %>
    <h2 class="qr-result-heading qr-success">Congratulations!</h2>
    <% } else { %>
    <h2 class="qr-result-heading qr-failure">Oops!</h2>
    <% } %>

    <p class="qr-result-message"><%= message %></p>

    <p class="current-streak qr-current-streak">
      Your current streak <% if (!correct) { %>was<% } else { %>is<% } %>:
      <strong><%= streak %></strong>
    </p>

    <p class="qr-difficulty-level">
      Difficulty Level: <strong><%= difficulty %></strong>
    </p>

    <div class="qr-navigation-container">
      <a
        href="/quiz?difficulty=<%= difficulty %>"
        class="btn qr-btn qr-btn-try-again"
        >Try Another Question</a
      >
      <a href="/leaderboard" class="btn qr-btn qr-btn-leaderboard"
        >View Leaderboard</a
      >
      <a href="/" class="btn qr-btn qr-btn-home">Home</a>
    </div>
  </div>
</main>
